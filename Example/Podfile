platform :ios, '10.0'
use_frameworks!

project 'RxCam.xcodeproj'
workspace 'RxCam'

target 'RxCam_Example' do

  pod 'RxCam', :path => '../'

  target 'RxCam_Tests' do
    inherit! :search_paths

    pod 'Quick',  '~> 1.1.0'
    pod 'Nimble', '~> 7.0.1'
  end
end

swift_target_versions = {
  'RxCam' => '3.2',
}

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['SWIFT_VERSION'] = swift_target_versions[target.name] || '3.2'
    end
  end
end
